APP_NAME="Media Gallery Downloader"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost:8080

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=daily,stderr
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

DB_CONNECTION=sqlite
DB_DATABASE=storage/app/db/database.sqlite

SESSION_DRIVER=redis
SESSION_CONNECTION=session
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis

# Redis is configured via docker-compose.yml environment
# Default service name is 'valkey' within the compose network
REDIS_CLIENT=phpredis
REDIS_HOST=valkey
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_PERSISTENT=true

MAIL_MAILER=log

VITE_APP_NAME="${APP_NAME}"

# Octane Configuration
OCTANE_SERVER=frankenphp
EARLY_HINTS_SEND_103=true
EARLY_HINTS_EXTENSIONS=css,js,svg,jpg,jpeg,png,webp,woff2

# =============================================================================
# Docker Configuration (Production)
# =============================================================================
# These variables are used by docker-compose.yml

# User/Group ID for file permissions (defaults to 1000)
# Set these to match your host user: UID=$(id -u) GID=$(id -g)
# UID=1000
# GID=1000

# =============================================================================
# System
# =============================================================================
# Timezone (e.g., America/New_York, Europe/London, Asia/Tokyo)
TZ=UTC

# HTTP port (used by both Docker and Caddy)
# HTTP_PORT=8080

# =============================================================================
# Data Storage
# =============================================================================
# Path for all persistent data (mounted to /app/storage in container)
# Contains: database, media files, thumbnails, backups, logs, cache
# DATA_PATH=./storage

# Container memory limits
# MEMORY_LIMIT=4G
# MEMORY_RESERVATION=1G

# =============================================================================
# Bulk Import Configuration
# =============================================================================
# Number of files to queue per batch (default: 10)
# MGD_IMPORT_BATCH_SIZE=10

# Custom paths are rarely needed - defaults use storage/app/data/import/
# Only set these if you need to override the default locations and you know what you are doing
# MGD_IMPORT_INCOMING_PATH=
# MGD_IMPORT_FAILED_PATH=
