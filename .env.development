APP_NAME="Media Gallery Downloader"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=https://localhost:8080

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=daily,stderr
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite

SESSION_DRIVER=redis
SESSION_CONNECTION=session
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=mgd_valkey
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Octane Configuration
OCTANE_SERVER=frankenphp
EARLY_HINTS_SEND_103=true
EARLY_HINTS_EXTENSIONS=css,js,svg,jpg,jpeg,png,webp,woff2
REDIS_PERSISTENT=true

# =============================================================================
# YouTube Authentication (for age-restricted videos)
# =============================================================================
# Option 1: Path to cookies.txt file in Netscape format
# YTDLP_COOKIES_FILE=/app/storage/app/cookies.txt
#
# Option 2: Extract cookies from browser (browser must be closed)
# Valid values: chrome, firefox, edge, safari, opera, brave
# YTDLP_COOKIES_FROM_BROWSER=chrome

# =============================================================================
# Docker Configuration
# =============================================================================
# These variables are used by docker-compose.yml

# Build target: 'production' or 'development'
DOCKER_TARGET=development

# User/Group ID for file permissions (defaults to 1000)
# Set these to match your host user: UID=$(id -u) GID=$(id -g)
# UID=1000
# GID=1000

# Timezone
TZ=UTC

# HTTP port (used by both Docker and Caddy)
# HTTP_PORT=8080

# Data storage paths (for production docker-compose.yml)
# DATA_PATH=./data
# DB_PATH=./database

# Container memory limits
# MEMORY_LIMIT=4G
# MEMORY_RESERVATION=1G

# =============================================================================
# Bulk Import Configuration
# =============================================================================
# Number of files to queue per batch (default: 10)
# MGD_IMPORT_BATCH_SIZE=10

# Custom paths are rarely needed - defaults use storage/app/data/import/
# Only set these if you need to override the default locations and you know what you are doing
# MGD_IMPORT_INCOMING_PATH=
# MGD_IMPORT_FAILED_PATH=
